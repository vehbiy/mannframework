@model ProjectGroup

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                @using (Html.BeginForm())
                {
                    <div class="ibox-title">
                        <h5>@Html.EditPageTitle("ProjectGroup")</h5>
                        <div class="ibox-tools">
                            @Html.SaveLinks()
                        </div>
                    </div>
                    <div class="ibox-content">
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                <div class="col-md-2">
                                    @Html.LocalizedStyledLabel("ProjectGroup.Project")
                                </div>
                                <div class="col-md-4">
                                    @Html.StyledDropDownList("ProjectId", Html.GetItems<Project>(), Model.ProjectId, disabled: true)
                                    @Html.ValidationMessageFor(model => model.Project)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-2">
                                    @Html.LocalizedStyledLabel("ProjectGroup.Name")
                                </div>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.Name)
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>
                                <div class="col-md-2">
                                    @Html.LocalizedStyledLabel("ProjectGroup.Priority")
                                </div>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.Priority)
                                    @Html.ValidationMessageFor(model => model.Priority)
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

