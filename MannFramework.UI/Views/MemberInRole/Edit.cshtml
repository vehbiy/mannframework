@model MemberInRole

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
				@using (Html.BeginForm())
				{
					<div class="ibox-title">  
						<h5>@Html.EditPageTitle("MemberInRole")</h5>
						<div class="ibox-tools">
							@Html.SaveLinks()
						</div>
					</div>
					<div class="ibox-content">
						@Html.AntiForgeryToken()
							<div class="form-horizontal">
								@Html.ValidationSummary(true)
								<div class="form-group">
									<div class="col-md-2">
										@Html.StyledLabel("MemberInRole.Member")
									</div>
									<div class="col-md-4">
										@Html.StyledDropDownList("MemberId", Html.GetItems<Member>(), Model.MemberId, disabled: true)
										@Html.ValidationMessageFor(model => model.Member)
									</div> 
									<div class="col-md-2">
										@Html.StyledLabel("MemberInRole.Role")
									</div>
									<div class="col-md-4">
										@Html.StyledDropDownList("RoleId", Html.GetItems<Role>(), Model.RoleId)
										@Html.ValidationMessageFor(model => model.Role)
									</div> 
								</div> 
							</div> 
					</div> 
				}
            </div> 
        </div> 
    </div> 
 </div> 

