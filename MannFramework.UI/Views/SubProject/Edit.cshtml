@model SubProject

<div ng-controller="SubProjectCtrl" class="wrapper wrapper-content animated fadeInRight">
    <div class="row" ng-init="InitEdit()">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                @using (Html.BeginForm())
                {
                    <div class="ibox-title">
                        <h5>@Html.Localize("Edit") @Html.Localize("SubProject")</h5>
                        <div class="ibox-tools">
                            @Html.SaveLinks()
                        </div>
                    </div>
                    <div class="ibox-content">
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                <div class="col-md-2">
                                    @Html.LocalizedStyledLabel("SubProject.Project")
                                </div>
                                <div class="col-md-4">
                                    @Html.StyledDropDownList("ProjectId", Html.GetItems<Project>(), Model.ProjectId, disabled: true)
                                    @Html.ValidationMessageFor(model => model.Project)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-2">
                                    @Html.LocalizedStyledLabel("SubProject.Name")
                                </div>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.Name)
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>
                                <div class="col-md-2">
                                    @Html.LocalizedStyledLabel("SubProject.Folder")
                                </div>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.Folder)
                                    @Html.ValidationMessageFor(model => model.Folder)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-2">
                                    @Html.LocalizedStyledLabel("SubProject.ProjectType")
                                </div>
                                <div class="col-md-4">
                                    @Html.CheckBoxListForEnum(m => m.ProjectType, Model.ProjectType.ToSelectList())
                                    @Html.ValidationMessageFor(model => model.ProjectType)
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
