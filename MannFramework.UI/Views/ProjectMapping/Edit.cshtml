@model ProjectMapping

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                @using (Html.BeginForm())
                {
                    <div class="ibox-title">
                        <h5>@Html.EditPageTitle("ProjectMapping")</h5>
                        <div class="ibox-tools">
                            @Html.SaveLinks()
                        </div>
                    </div>
                    <div class="ibox-content">
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                <div class="col-md-2">
                                    @Html.LocalizedStyledLabel("ProjectMapping.Member")
                                </div>
                                <div class="col-md-4">
                                    @Html.StyledDropDownList("MemberId", Html.GetItems<Member>(), Model.MemberId, disabled: true)
                                    @Html.ValidationMessageFor(model => model.Member)
                                </div>
                                <div class="col-md-2">
                                    @Html.LocalizedStyledLabel("ProjectMapping.Project")
                                </div>
                                <div class="col-md-4">
                                    @Html.StyledDropDownList("ProjectId", Html.GetItems<Project>(), Model.ProjectId, disabled: true)
                                    @Html.ValidationMessageFor(model => model.Project)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-2">
                                    @Html.LocalizedStyledLabel("ProjectMapping.LocalPath")
                                </div>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.LocalPath)
                                    @Html.ValidationMessageFor(model => model.LocalPath)
                                </div>
                                <div class="col-md-2">
                                    @Html.LocalizedStyledLabel("ProjectMapping.MappingType")
                                </div>
                                <div class="col-md-4">
                                    @Html.StyledDropDownListForEnum("MappingType", typeof(ProjectMappingType), Model.MappingType)
                                    @Html.ValidationMessageFor(model => model.MappingType)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-2">
                                    @Html.LocalizedStyledLabel("ProjectMapping.IsDefault")
                                </div>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.IsDefault)
                                    @Html.ValidationMessageFor(model => model.IsDefault)
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
