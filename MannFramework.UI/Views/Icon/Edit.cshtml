@using Newtonsoft.Json
@model Icon

<div class="wrapper wrapper-content animated fadeInRight" ng-controller="IconCtrl">
    <div class="row" ng-init="InitEdit()">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                @using (Html.BeginForm())
                {
                    <div class="ibox-title">
                        <h5>@Html.EditPageTitle("Icon")</h5>
                        <div class="ibox-tools">
                            @Html.SaveLinks()
                        </div>
                    </div>
                    <div class="ibox-content">
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                <div class="col-md-2">
                                    @Html.StyledLabel("Icon.Name")
                                </div>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.Name)
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>
                                <div class="col-md-2">
                                    @Html.StyledLabel("Icon.CssClass")
                                </div>
                                <div class="col-md-3">
                                    @Html.TextBoxFor(model => model.CssClass, new { @ng_model = "model.CssClass", @class = "text-box single-line" })
                                    @Html.ValidationMessageFor(model => model.CssClass)
                                </div>
                                <div class="col-md-1">
                                    <h3><i class="fa {{model.CssClass}}"></i></h3>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-2">
                                    @Html.StyledLabel("Icon.Image")
                                </div>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.Image)
                                    @Html.ValidationMessageFor(model => model.Image)
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    window.model =
        @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model, new JsonSerializerSettings{ReferenceLoopHandling = ReferenceLoopHandling.Ignore }));
</script>
