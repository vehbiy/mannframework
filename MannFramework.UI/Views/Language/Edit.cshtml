@model Language

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                @using (Html.BeginForm())
                {
                    <div class="ibox-title">
                        <h5>@Html.Localize("Edit") @Html.Localize("Language")</h5>
                        <div class="ibox-tools">
                            @Html.SaveLinks()
                        </div>
                    </div>
                    <div class="ibox-content">
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                <div class="col-md-2">
                                    @Html.StyledLabelFor(model => model.CultureCode)
                                </div>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.CultureCode)
                                    @Html.ValidationMessageFor(model => model.CultureCode)
                                </div>
                                <div class="col-md-2">
                                    @Html.StyledLabelFor(model => model.Name)
                                </div>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.Name)
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-2">
                                    @Html.StyledLabelFor(model => model.IsDefault)
                                </div>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.IsDefault)
                                    @Html.ValidationMessageFor(model => model.IsDefault)
                                </div>
                            </div>
                        </div>
                    </div>
                }
                @*<div class="ibox-footer">
                        <div class="ibox-tools">
                            @Html.SaveLinks()
                        </div>
                    </div>*@
            </div>
        </div>
    </div>
</div> 