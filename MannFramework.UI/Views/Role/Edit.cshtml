@model Role

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                @using (Html.BeginForm())
                {
                    <div class="ibox-title">  
                        <h5>@Html.EditPageTitle("Role")</h5>
                        <div class="ibox-tools">
                            @Html.LocalizedStyledActionLinkForExistingItem("AllowedMenuItems", "List", "MenuItemRole", new RouteValueDictionary () { { "RoleId", Model.Id } })
                            @Html.SaveLinks()
                        </div>
                    </div>
                    <div class="ibox-content">
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                <div class="col-md-2">
                                    @Html.StyledLabel("Role.Name")
                                </div>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.Name)
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div> 
                                <div class="col-md-2">
                                    @Html.StyledLabel("Role.AllowedMenuItems")
                                </div>
                                <div class="col-md-4">
                                    @Html.ValidationMessageFor(model => model.AllowedMenuItems)
                                </div> 
                            </div> 
                        </div> 
                    </div> 
                }
            </div> 
        </div> 
    </div> 
</div> 

