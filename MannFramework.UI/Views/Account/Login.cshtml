@{
                /**/

                Layout = null;
}

@model LoginModel

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Garcia | @Html.Localize("Login")</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">
    <link href="~/Content/custom.min.css" rel="stylesheet" />
</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen  animated fadeInDown">
        <div>
            <div>
                <h1 class="logo-name">GF+</h1>
            </div>
            <h3> Welcome to Garcia Framework</h3>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = GarciaLocalizationManager.Localize("Email") })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
                <div class="form-group">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = GarciaLocalizationManager.Localize("Password") })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
                <div class="form-group">
                    @Html.SaveLink("Login")
                    <a href="#"><small>@Html.Localize("ForgotPassword")</small></a>
                </div>
                <div class="form-group">
                    @Html.ValidationMessageFor(m => m.Result)
                </div>

                @*<p class="text-muted text-center"><small>Do not have an account?</small></p>
                    <a class="btn btn-sm btn-white btn-block" href="@Url.Action("Register", "Pages")">Create an account</a>*@
            }
            <p class="m-t"> <small>Garcia Framework &copy; 2017</small> </p>
        </div>
    </div>

</body>

</html>


