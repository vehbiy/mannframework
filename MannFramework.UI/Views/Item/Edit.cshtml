@model Item

<div ng-controller="ItemCtrl" class="wrapper wrapper-content animated fadeInRight">
    <div class="row" ng-init="InitEdit()">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                @using (Html.BeginForm())
                {
                    <div class="ibox-title">
                        <h5>Edit Item</h5>
                        <div class="ibox-tools">
                            @Html.SaveLinks()
                        </div>
                    </div>
                    <div class="ibox-content">
                        @Html.AntiForgeryToken()
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                <div class="col-md-2">
                                    @Html.StyledLabelFor(model => model.Project)
                                </div>
                                <div class="col-md-4">
                                    @Html.StyledDropDownList("ProjectId", Html.GetItems<Project>(), Model.ProjectId, disabled: true)
                                    @Html.ValidationMessageFor(model => model.Project)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-2">
                                    @Html.StyledLabelFor(model => model.Name)
                                </div>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.Name)
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>
                                <div class="col-md-2">
                                    @Html.StyledLabelFor(model => model.IsEnum)
                                </div>
                                <div class="col-md-4">
                                    @Html.EditorFor(model => model.IsEnum)
                                    @Html.ValidationMessageFor(model => model.IsEnum)
                                </div>
                            </div>
                            @*<div class="form-group">
                                <div class="col-md-2">
                                    @Html.StyledLabelFor(model => model.Properties)
                                </div>
                                <div class="col-md-4">
                                    @Html.StyledListBox("Properties", Model.Properties.ToSelectList())
                                    @Html.ValidationMessageFor(model => model.Properties)
                                </div>
                            </div>*@
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
