@using Newtonsoft.Json
@model CopyItemModel

<div ng-controller="ItemCtrl" class="wrapper wrapper-content animated fadeInRight">
    <div class="row" ng-init="InitCopy()">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="ibox-title">
                        <h5>@Html.Localize("Item.Copy")</h5>
                        <div class="ibox-tools">
                            @Html.SaveLinks()
                        </div>
                    </div>
                    <div class="ibox-content">
                        <div class="form-horizontal">
                            @Html.ValidationSummary(true)
                            <div class="form-group">
                                <div class="col-md-2">
                                    @Html.StyledLabel("Project")
                                </div>
                                <div class="col-md-4">
                                    @Html.StyledDropDownList("ProjectId", Html.GetProjects(), Model.ProjectId)
                                    @Html.ValidationMessageFor(model => model.ProjectId)
                                </div>
                                <div class="col-md-2">
                                    @Html.StyledLabel("Item")
                                </div>
                                <div class="col-md-4">
                                    @* ItemId uzerinden otomatik binding yapamiyor, bu sekilde kullanilacaksa  *@
                                    @*<select name="ItemId" id="ItemId" ng-model="item.Item" class="btn btn-default dropdown-toggle dropdownlist ng-valid ng-not-empty ng-dirty ng-valid-parse ng-touched" ng-options="option.Name for option in Items track by option.Id"></select>*@
                                    <select name="ItemId" id="ItemId" ng-model="model.ItemId" class="btn btn-default dropdown-toggle dropdownlist" ng-options="option.Id as option.Name for option in Items"></select>
                                    @Html.ValidationMessageFor(model => model.ItemId)
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-2">
                                    @Html.StyledLabelFor(model => model.Name)
                                </div>
                                <div class="col-md-4">
                                    @*@Html.EditorFor(model => model.Name)*@
                                    @Html.TextBoxFor(model => model.Name, new { @ng_model = "item.Item.Name", @class = "text-box single-line" })
                                    @Html.ValidationMessageFor(model => model.Name)
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<script>
    window.model =
        @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model, new JsonSerializerSettings{ReferenceLoopHandling = ReferenceLoopHandling.Ignore }));
</script>