@model Store

<div class="wrapper wrapper-content animated fadeInRight" ng-controller="StoreCtrl">
    <div class="row" ng-init="InitEdit()">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
				@using (Html.BeginForm())
				{
					<div class="ibox-title">  
						<h5>@Html.EditPageTitle("Store")</h5>
						<div class="ibox-tools">
							@Html.SaveLinks()
						</div>
					</div>
					<div class="ibox-content">
						@Html.AntiForgeryToken()
							<div class="form-horizontal">
								@Html.ValidationSummary(true)
								<div class="form-group">
									<div class="col-md-2">
										@Html.LocalizedStyledLabel("Store.Name")
									</div>
									<div class="col-md-4">
										@Html.EditorFor(model => model.Name)
										@Html.ValidationMessageFor(model => model.Name)
									</div> 
									<div class="col-md-2">
										@Html.LocalizedStyledLabel("Store.Address")
									</div>
									<div class="col-md-4">
										@Html.EditorFor(model => model.Address)
										@Html.ValidationMessageFor(model => model.Address)
									</div> 
								</div> 
								<div class="form-group">
									<div class="col-md-2">
										@Html.LocalizedStyledLabel("Store.Phone")
									</div>
									<div class="col-md-4">
										@Html.EditorFor(model => model.Phone)
										@Html.ValidationMessageFor(model => model.Phone)
									</div> 
									<div class="col-md-2">
										@Html.LocalizedStyledLabel("Store.Manager")
									</div>
									<div class="col-md-4">
										@Html.EditorFor(model => model.Manager)
										@Html.ValidationMessageFor(model => model.Manager)
									</div> 
								</div> 
							</div> 
					</div> 
				}
            </div> 
        </div> 
    </div> 
 </div> 

